<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pro.mapper.FindAndFix">
        <select id="findBy" parameterType="map" resultType="pro.entity.Demand">
            select * from demand
            <trim prefix="where"  suffixOverrides="and">
                <if test="demandplanCode != null">
                    demandplanCode = #{demandplanCode} and
                </if>
                <if test="demandplantype != null">
                    demand_plantype = #{demandplantype} and
                </if>
                <if test="year != null">
                    year= #{year} and
                </if>
                <if test="demandDepartment != null">
                    demandDepartment= #{demandDepartment} and
                </if>
                <if test="year != null">
                    demandMonth= #{demandMonth}
                </if>
            </trim>
        </select>
    </mapper>
